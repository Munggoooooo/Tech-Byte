                    margin-bottom: 10px;
                }

                .mega-category ul li {
                    display: block;
                    width: 100%;
                    color: #333;
                    text-decoration: none;
                    transition: background-color 0.3s ease, box-shadow 0.3s ease;
                    margin-left: -52px;
                    width: 150%;
                }

                .mega-category .arrow {
                    color: #666;
                    font-weight: bolder;
                    font-size: large;
                    margin-left: 10px; /* Optional spacing between text and arrow */
                    cursor: default;
                }

                .mega-category .category {
