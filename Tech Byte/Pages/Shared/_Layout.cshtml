    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const categoryItems = document.querySelectorAll('.mega-category li[data-target]');
            const subcategories = document.querySelectorAll('.mega-subcategory');
            const defaultSub = document.querySelector('.mega-subcategory.default');
            const megaMenu = document.querySelector('.mega-menu');

            // Function to show a specific subcategory and hide others
            function showSubcategory(targetId) {
                subcategories.forEach(sub => {
                    sub.style.display = (sub.id === targetId) ? 'block' : 'none';
                });
            }

            // Initially show default subcategory if it exists
            if (defaultSub) {
                showSubcategory(defaultSub.id);
            }

            // Handle hover on category list items
            categoryItems.forEach(item => {
                item.addEventListener('mouseenter', () => {
                    const targetId = item.getAttribute('data-target');
                    if (targetId) {
                        showSubcategory(targetId);
                    }
                });
            });

            // On mouse leave of the whole mega menu, reset to default
            megaMenu.addEventListener('mouseleave', () => {
                if (defaultSub) {
                    showSubcategory(defaultSub.id);
                } else {
                    // If no default defined, hide all
                    subcategories.forEach(sub => {
                        sub.style.display = 'none';
                    });
                }
            });
        });
    </script>
