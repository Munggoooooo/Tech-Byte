@page
@model Tech_Byte.Pages.Account.LoginModel

@if (TempData["ActivationSuccess"] != null)
{
    <script>
        alert('@TempData["ActivationSuccess"]');
    </script>
}
@if (TempData["ResetPasswordSuccess"] != null)
{
    <script>
        alert('@TempData["ResetPasswordSuccess"]');
    </script>
}

<style>

    .login-container {
        width: 380px;
        text-align: center;
    }

    .logo {
        width: 75px;
        margin-bottom: 10px;
    }

    .logoposition {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    h1 {
        font-size: 28px;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .subtitle {
        color: #666;
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    form {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    input {
        padding: 14px;
        border-radius: 10px;
        border: 1px solid #ddd;
        font-size: 15px;
    }

    .forgot {
        font-size: 14px;
        color: #666;
        margin-top: -8px;
        text-align: right;
        display: block;
        text-decoration: none;
    }

    .signin-btn {
        background: black;
        color: white;
        padding: 14px;
        border-radius: 10px;
        border: none;
        font-size: 16px;
        cursor: pointer;
        margin-top: 10px;
    }

    .divider {
        margin: 25px 0;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .divider span {
            color: #888;
            font-size: 14px;
        }

    .social-login {
        display: flex;
        justify-content: center;
        gap: 12px;
        margin-bottom: 25px;
    }

        .social-login button {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            border: 1px solid #ddd;
            background: white;
            font-size: 18px;
            cursor: pointer;
        }

    .signup {
        color: #444;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .signup a {
            color: black;
            font-weight: bold;
            text-decoration: none;
        }

    .signin-btn:hover {
        background: white;
        color: black;
        border: 1px solid black;
        transition: 0.25s ease;
    }

    .social-login button:hover {
        background: black;
        color: white;
        border-color: black;
        transition: 0.25s ease;
    }

    .forgot:hover {
        color: red;
        transition: 0.25s ease;
    }

    .signup a:hover {
        color: #0a58ca;
        transition: 0.25s ease;
    }
</style>

<div class="row justify-content-center">
    <div class="col-md-5">

        <div class="card shadow-sm">
            <div class="card-body">

                <a class="logoposition"><img src="~/images/TechByte.png" class="logo" alt="TechByte Logo" /></a>

                <h1>Welcome back!</h1>
                <p class="subtitle">Please enter your details to sign in.</p>

                <form method="post">
                    <input asp-for="Email" type="email" placeholder="Your email" required>
                    <input asp-for="Password" type="password" placeholder="Password" required>

                    <a asp-page="/Account/ForgotPassword" class="forgot">Forgot password?</a>

                    <button class="signin-btn">Sign in</button>
                </form>

                <div class="text-danger mt-3">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>

                <div class="divider">
                    <span>or continue with</span>
                </div>

                <div class="social-login">
                    <button><i class="fab fa-google"></i></button>
                    <button><i class="fab fa-x-twitter"></i></button>
                    <button><i class="fab fa-facebook"></i></button>
                </div>

                <p class="signup mt-3 text-center">
                    Not a member?<a asp-page="/Account/Register" class="ms-2">Sign up</a>
                </p>

            </div>
        </div>

    </div>
</div>